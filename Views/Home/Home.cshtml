@model Travel_Agency.ViewModel.HomeViewModel
@using Travel_Agency.Models
@{
    Layout = null;


}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <style type="text/css">
        body {
            background: url("https://media.product.which.co.uk/prod/images/original/gm-b431db58-9b9f-4e85-a330-e62acb01423c-main-3-18.jpeg"); /* Set background color for body to justify transparency of Jumbotron */
            background-repeat: no-repeat;
            background-position: center;
            background-size: cover;
            background-attachment: fixed;
        }

        .jumbotron {
            background: none; /* Transparent background */
            opacity: 0.8;
        }

        #con {
            width: 30%;
            opacity: 0.7;
            border-radius: 20px;
            float: right;
            margin-left: 1.650%;
            margin-right: 1.650%;
        }

        footer {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            background: none;
        }

        .navbar-nav li {
            margin-right: 10px;
            display: inline-block;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark navbar-fixed-top">
        <div class="container-fluid">
            <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSo1vDH84vbUXEoIykxwhkkv9okd7y8Nz3-_Q&usqp=CAU" height="50" width="65" />
        </div>
    </nav>
    <br />
    <div class="jumbotron">
        <center>
            <div class="mt-4 p-5 container-sm bg-primary text-white rounded">
                <h1>Order your flight Today</h1>
                <p>Please input the following fields to search for flights</p>
            </div>
        </center>
        <br />
        <form action="\Home\Search" method="post">
            <center>
                <div class="row container-sm">
                    <div class="col">
                        <input type="text" title="Please input only letters" pattern="^[A-Za-z]*$" class="form-control" placeholder="Departure" name="Departure">
                    </div>
                    <div class="col">
                        <input type="text" title="Please input only letters" pattern="^[A-Za-z]*$" class="form-control" placeholder="Destanation" name="Destanation">
                    </div>
                    <div class="col">
                        <input type="date" class="form-control" placeholder="Date" name="Date">
                    </div>
                    <div class="col">
                        <select class="form-control" id="sel1" placeholder="Time" name="Time">
                            <option>00:00</option>
                            <option>01:00</option>
                            <option>02:00</option>
                            <option>03:00</option>
                            <option>04:00</option>
                            <option>05:00</option>
                            <option>06:00</option>
                            <option>07:00</option>
                            <option>08:00</option>
                            <option>09:00</option>
                            <option>10:00</option>
                            <option>11:00</option>
                            <option>12:00</option>
                            <option>13:00</option>
                            <option>14:00</option>
                            <option>15:00</option>
                            <option>16:00</option>
                            <option>17:00</option>
                            <option>18:00</option>
                            <option>19:00</option>
                            <option>20:00</option>
                            <option>21:00</option>
                            <option>22:00</option>
                            <option>23:00</option>
                            <option>24:00</option>
                        </select>
                    </div>
                    <div class="col">
                        <input type="number" title="Please input only 4 digits number" pattern="^[0-9]{0,4}$" class="form-control" value="0" min="0" placeholder="Start Price" id="SPrice" name="SPrice">
                    </div>
                    <div class="col">
                        <input type="text" title="Please input only 4 digits number" pattern="^[0-9]{0,4}$" class="form-control" min="" value="1000" placeholder="Max Price" id="MPrice" name="MPrice">
                    </div>
                    <div class="col">
                        <select class="form-control" id="sel1" placeholder="Time" name="ways">
                            <option value="One way">One way</option>
                            <option value="Two way">Two way</option>
                        </select>
                    </div>
                </div>
                <br />
                <center>
                    <div>
                        <button type="submit" class="btn btn-primary btn-lg">Search for flight</button>
                    </div>
                </center>
            </center>
        </form>
    </div>
    <br />
    @if (Model.ways_flag == false)
    {
        foreach (Admin admin in Model.Admins)
        {
            <center>
                <div id="con" class="mt-4 p-5 container-sm bg-white text-black">
                    <form action="\CheckOut\choose_seats" method="post">
                        <div>
                            <h1>@admin.country_1 <i class="fa fa-arrow-right" aria-hidden="true"></i> @admin.counrty_2 </h1>
                            <br>
                            <h5>Time:@admin.Time_1</h5>
                            <h5>Date:@admin.Date_1</h5>
                            <h5>Price:@admin.Price_ticket</h5>
                            <h5>places:@admin.Free_Number_of_seats_1</h5>
                            <input type="text" class="form-control" style="display:none" placeholder="" value="@admin.Id" name="flight">
                            <input type="text" class="form-control" style="display:none" placeholder="" value="@admin.country_1" name="origin">
                            <input type="text" class="form-control" style="display:none" placeholder="" value="@Model.ways_flag" name="ways">
                            <div>
                                <button type="submit" class="btn btn-primary btn-lg">Book</button>
                            </div>
                            <br />
                        </div>
                    </form>
                </div>
            </center>
        }
        foreach (Admin admin in Model.Admins_back)
        {
            <center>
                <div id="con" class="mt-4 p-5 container-sm bg-white text-black">
                    <form action="\CheckOut\choose_seats" method="post">
                        <div>
                            <h1>@admin.counrty_2 <i class="fa fa-arrow-right" aria-hidden="true"></i> @admin.country_1 </h1>
                            <br>
                            <h5>Time:@admin.Time_2</h5>
                            <h5>Date:@admin.Date_2</h5>
                            <h5>Price:@admin.Price_ticket</h5>
                            <h5>places:@admin.Free_Number_of_seats_2</h5>
                            <input type="text" class="form-control" style="display:none" placeholder="" value="@admin.Id" name="flight">
                            <input type="text" class="form-control" style="display:none" placeholder="" value="@admin.counrty_2" name="origin">
                            <input type="text" class="form-control" style="display:none" placeholder="" value="@Model.ways_flag" name="ways">
                            <div>
                                <button type="submit" class="btn btn-primary btn-lg">Book</button>
                            </div>
                            <br />
                        </div>
                    </form>
                </div>
            </center>
        }
    }
    else
    {
        foreach (Admin admin in Model.Admins)
        {
            <center>
                <div id="con" class="mt-4 p-5 container-sm bg-white text-black">
                    <form action="\CheckOut\choose_seats" method="post">
                        <div>
                            <h1>@admin.country_1 <i class="fa fa-arrow-right" aria-hidden="true"></i> @admin.counrty_2 </h1>
                            <br>
                            <h5>Time:@admin.Time_1</h5>
                            <h5>Date:@admin.Date_1</h5>
                            <h5>places:@admin.Free_Number_of_seats_1</h5>
                            <h5>Flight back:</h5>
                            <h5>Time:@admin.Time_2</h5>
                            <h5>Date:@admin.Date_2</h5>
                            <h5>places:@admin.Free_Number_of_seats_2</h5>
                            <h5>Price:@(@admin.Price_ticket*2)</h5>
                            <input type="text" class="form-control" style="display:none" placeholder="" value="@admin.Id" name="flight">
                            <input type="text" class="form-control" style="display:none" placeholder="" value="@Model.ways_flag" name="ways">
                            <div>
                                <button type="submit" class="btn btn-primary btn-lg">Book</button>
                            </div>
                            <br />
                        </div>
                    </form>
                </div>
            </center>
        }
    }
    <footer class="bg-dark text-center text-white">
        <!-- Grid container -->
        <div class="container p-4 pb-0">
            <!-- Section: Social media -->
            <section class="mb-4">
                <!-- Facebook -->
                <a class="btn text-white btn-floating m-1"
                   style="background-color: #3b5998;"
                   href="www.facebook.com"
                   role="button">
                    <i class="fa fa-facebook"></i>
                </a>

                <!-- Twitter -->
                <a class="btn text-white btn-floating m-1"
                   style="background-color: #55acee;"
                   href="#!"
                   role="button">
                    <i class="fa fa-twitter"></i>
                </a>

                <!-- Google -->
                <a class="btn text-white btn-floating m-1"
                   style="background-color: #dd4b39;"
                   href="#!"
                   role="button">
                    <i class="fa fa-google"></i>
                </a>

                <!-- Instagram -->
                <a class="btn text-white btn-floating m-1"
                   style="background-color: #ac2bac;"
                   href="#!"
                   role="button">
                    <i class="fa fa-instagram"></i>
                </a>


                <!-- Github -->
                <a class="btn text-white btn-floating m-1"
                   style="background-color: #333333;"
                   href="#!"
                   role="button">
                    <i class="fa fa-github"></i>
                </a>
            </section>
            <!-- Section: Social media -->
        </div>
    </footer>
</body>
</html>